<h3>Add a New Blog Post</h3>
<%= form_with model: @post, local: true do |form| %>

  <%= form.label :title %>
  <%= form.text_field :title %>

  <br>  
  <br>
  <%= form.label :content %>
  <%= form.text_field :content %>
  <br>  
  <br>
  <%= form.submit 'Add Post' %>
<% end %>


<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<%= link_to 'Home', posts_path %>